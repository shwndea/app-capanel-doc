{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"includes": [
			"**",
			"!**/dist/**/*",
			"!**/node_modules/**/*",
			"!**/src/routeTree.gen.ts",
			"!**/src/client/**/*",
			"!**/src/components/ui/**/*",
			"!**/playwright-report",
			"!**/playwright.config.ts",
			"!styled-system"
		]
	},
	"linter": {
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "error",
				"useSelfClosingElements": "error",
				"noUselessElse": "error"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	}
}
